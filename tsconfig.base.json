{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@app/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "*.rm"
  ]
}